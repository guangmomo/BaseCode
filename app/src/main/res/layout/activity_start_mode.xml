<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

<LinearLayout
    android:id="@+id/activity_start_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
   >

   <!--  android:saveEnabled="false"  会禁止View的自动保存数据-->
    <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/test_editText"
       android:textSize="20sp"
       android:saveEnabled="false"
        android:visibility="gone"
       />

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="弹出Dialog"
        android:onClick="dialog"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="standard"
        android:onClick="standard"
        />

    <com.xuliwen.basecode.androidcode.startmode.CustomSwitch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customSwitch"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置CustomSwitch的CustomState"
        android:onClick="setCustomState"/>



 <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="启动AllowTaskReparenting的Activity"
     android:onClick="toAllowTaskReparentingActivity"/>

 <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="toSingeTopActivity"
     android:onClick="toSingeTopActivity"/>

 <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:onClick="toSingleInstanceActivity"
     android:text="toSingleInstanceActivity"/>

 <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="toSingleTaskActivity"
     android:onClick="toSingleTaskActivity"
     />


 <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="Service中启动Activity"
     android:onClick="toServiceActivity"
     />

 <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="跳转到ClearActivity"
     android:onClick="toClearActivity"/>

 <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="测试SingleTask的特殊性"
     android:onClick="toActivityCD"/>

</LinearLayout>
</ScrollView>
